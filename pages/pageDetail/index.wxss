@import "../../wxParse/wxParse.wxss";
.head{
  padding:20rpx;
  /* background: #C0C0C0; */
  margin-bottom: 20rpx;
  box-shadow: 0px 4rpx 0px #f9f9fa;
}
.input-wrapper{
  border-radius: 25rpx;
  margin-left:15rpx;
  width:250rpx;
  background: #f9f9fa;
  padding:5rpx;
  font-size:.7rem;
}
.icon-group{
  width:250rpx;margin-right: 15rpx;
}
.flex-row-between{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width:fit-content;
}
.title{
  border-left:10rpx solid red;
  padding: 20rpx;
  font-size:1.5rem;
  margin-bottom: 1rem;
}
.label{
  width:fit-content;
  color: white;
  border-radius: 50rpx;
  padding: .2rem;
  padding-left: .5rem;
  padding-right: .5rem;
  margin-right: .5rem;
}
.flex-column-between{
   display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.icon-box{
  font-size: .8rem;
  align-items: center;
  text-align: center;
  flex-direction: column;
}
.flex-center{
  display: flex;
  justify-content: center;
  align-items: center;
}

.text-discrible{
  text-align: center;
}
.submit-botton{
  background: #07c160;
  border-radius: 30rpx;
  width:140rpx;
  padding:5rpx;
  color: white;
  font-size: .9rem;
}

.footer-fixed{
  position: fixed;
  box-sizing: content-box;
  bottom:0;
  height:140rpx;
  width: 100%;
  /* padding-left:20rpx; */
  /* padding-right:100rpx; */
  box-shadow: 0px 0px 10px #C0C0C0;
}
.flex-between{
  display: flex;
  justify-content: space-between;
  align-items: center;
}